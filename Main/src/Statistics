import java.util.ArrayList;
import java.util.HashSet;

public class Statistics {
    private ArrayList<String> words;

    public Statistics(ArrayList<String> words) {
        this.words = words;
    }

    // Calculate total number of words
    public int getTotalWordCount() {
        return words.size();
    }

    // Calculate number of unique words
    public int getUniqueWordCount() {
        HashSet<String> uniqueWords = new HashSet<>(words);
        return uniqueWords.size();
    }

    // Optional: calculate average word length
    public double getAverageWordLength() {
        if (words.isEmpty()) return 0;
        int totalLength = 0;
        for (String word : words) {
            totalLength += word.length();
        }
        return (double) totalLength / words.size();
    }

    // Display statisticss
    public void printStats() {
        System.out.println("\n=== Article Statistics ===");
        System.out.println("Total words (after stopword removal): " + getTotalWordCount());
        System.out.println("Unique words: " + getUniqueWordCount());
        System.out.printf("Average word length: %.2f%n", getAverageWordLength());
    }
}

